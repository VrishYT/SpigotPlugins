MobBehaviour:
  Slimes:
    spawn-rate: 5 #Chance of a slime spawning every time a player moves. (1/value) Default = 1/20 Chance
    spawn-range-min: 50 #How far slimes will spawn in blocks (minimum)
    spawn-range-max: 200 #How far slimes will spawn in blocks (maximum)
    giant-slime-chance: 100 #Chance for a slime to be giant (1/value) Default = 1/100 Chance